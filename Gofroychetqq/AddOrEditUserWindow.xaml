<Window x:Class="Gofroychetqq.AddOrEditUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Пользователь" Height="350" Width="400" WindowStartupLocation="CenterOwner" Background="#FF23272A">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <TextBlock Text="Логин:" Foreground="White"/>
            <TextBox x:Name="LoginBox" Margin="0,0,0,10"/>
            <TextBlock Text="Пароль:" Foreground="White"/>
            <PasswordBox x:Name="PasswordBox" Margin="0,0,0,10"/>
            <TextBlock Text="Фамилия:" Foreground="White"/>
            <TextBox x:Name="SurnameBox" Margin="0,0,0,10"/>
            <TextBlock Text="Имя:" Foreground="White"/>
            <TextBox x:Name="NameBox" Margin="0,0,0,10"/>
            <TextBlock Text="Отчество:" Foreground="White"/>
            <TextBox x:Name="PatronymicBox" Margin="0,0,0,10"/>
            <TextBlock Text="Роль:" Foreground="White"/>
            <ComboBox x:Name="RoleComboBox" DisplayMemberPath="Name" SelectedValuePath="RoleID" Margin="0,0,0,10"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Сохранить" Width="100" Margin="0,0,10,0" Click="Save_Click" Background="#FF7289DA" Foreground="White"/>
            <Button Content="Отмена" Width="100" Click="Cancel_Click" Background="#FF7289DA" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window> 