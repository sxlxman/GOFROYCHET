<Window x:Class="Gofroychetqq.AddOrEditSupplierWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gofroychetqq"
        mc:Ignorable="d"
        Title="Добавление/Редактирование поставщика" Height="500" Width="600" 
        WindowStartupLocation="CenterScreen" Background="#FF23272A">
    <Grid>
        <Border Background="#FF2C2F33" CornerRadius="10" Margin="20">
            <StackPanel Margin="20">
                <TextBlock x:Name="TitleText" Text="Добавление поставщика" FontSize="24" 
                         FontWeight="Bold" Foreground="#FF7289DA" Margin="0,0,0,20" 
                         HorizontalAlignment="Center"/>

                <StackPanel Margin="0,5">
                    <TextBlock Text="Название:" Foreground="White" Margin="0,0,0,5"/>
                    <TextBox x:Name="NameTextBox" Background="#23272A" Foreground="White" 
                            BorderBrush="#FF7289DA" Padding="5"/>
                </StackPanel>

                <StackPanel Margin="0,5">
                    <TextBlock Text="ИНН:" Foreground="White" Margin="0,0,0,5"/>
                    <TextBox x:Name="INNTextBox" Background="#23272A" Foreground="White" 
                            BorderBrush="#FF7289DA" Padding="5"/>
                </StackPanel>

                <StackPanel Margin="0,5">
                    <TextBlock Text="Адрес:" Foreground="White" Margin="0,0,0,5"/>
                    <TextBox x:Name="AddressTextBox" Background="#23272A" Foreground="White" 
                            BorderBrush="#FF7289DA" Padding="5"/>
                </StackPanel>

                <StackPanel Margin="0,5">
                    <TextBlock Text="Телефон:" Foreground="White" Margin="0,0,0,5"/>
                    <TextBox x:Name="PhoneTextBox" Background="#23272A" Foreground="White" 
                            BorderBrush="#FF7289DA" Padding="5"/>
                </StackPanel>

                <StackPanel Margin="0,5">
                    <TextBlock Text="Email:" Foreground="White" Margin="0,0,0,5"/>
                    <TextBox x:Name="EmailTextBox" Background="#23272A" Foreground="White" 
                            BorderBrush="#FF7289DA" Padding="5"/>
                </StackPanel>

                <StackPanel Margin="0,5">
                    <TextBlock Text="Контактное лицо:" Foreground="White" Margin="0,0,0,5"/>
                    <TextBox x:Name="ContactPersonTextBox" Background="#23272A" Foreground="White" 
                            BorderBrush="#FF7289DA" Padding="5"/>
                </StackPanel>

                <StackPanel Margin="0,5">
                    <TextBlock Text="Примечание:" Foreground="White" Margin="0,0,0,5"/>
                    <TextBox x:Name="NoteTextBox" Background="#23272A" Foreground="White" 
                            BorderBrush="#FF7289DA" Padding="5" TextWrapping="Wrap" 
                            AcceptsReturn="True" Height="60"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button x:Name="SaveButton" Content="Сохранить" Width="120" Height="30" 
                            Margin="5" Background="#FF7289DA" Foreground="White" 
                            FontSize="14" Click="SaveButton_Click"/>
                    <Button Content="Отмена" Width="120" Height="30" Margin="5" 
                            Background="#FF7289DA" Foreground="White" FontSize="14" 
                            Click="CancelButton_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>