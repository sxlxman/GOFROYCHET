<Window x:Class="Gofroychetqq.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ГофроУчёт - Авторизация" Height="300" Width="400" WindowStartupLocation="CenterScreen" Background="White">
    <Grid>
        <Border Background="#FFE0E0E0" CornerRadius="10" Margin="30">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="260">
                <TextBlock Text="ГофроУчёт" FontSize="28" FontWeight="Bold" Foreground="Black" Margin="0,20,0,20" HorizontalAlignment="Center"/>
                <TextBox x:Name="LoginBox" Height="35" Margin="0,0,0,10" FontSize="16" Background="White" Foreground="Black" BorderBrush="#FFB0B0B0" BorderThickness="1"/>
                <PasswordBox x:Name="PasswordBox" Height="35" Margin="0,0,0,20" FontSize="16" Background="White" Foreground="Black" BorderBrush="#FFB0B0B0" BorderThickness="1"/>
                <Button Content="Войти" Height="40" FontSize="16" Background="#FF5078C0" Foreground="White" BorderThickness="0" Cursor="Hand" Click="Login_Click"/>
                <TextBlock x:Name="ErrorText" Foreground="Red" FontSize="14" Margin="0,15,0,0" TextAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>